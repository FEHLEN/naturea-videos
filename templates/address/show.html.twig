{% extends 'base.html.twig' %}

{% block title %}Adresses{% endblock %}

{% block body %}
    <h1>Les adresses</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ address.id }}</td>
            </tr>
            <tr>
                <th>Fullname</th>
                <td>{{ address.fullname }}</td>
            </tr>
            <tr>
                <th>Societe</th>
                <td>{{ address.societe }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ address.adresse }}</td>
            </tr>
            <tr>
                <th>ComplementAdresse</th>
                <td>{{ address.complementAdresse }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ address.telephone }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ address.ville }}</td>
            </tr>
            <tr>
                <th>CodePostal</th>
                <td>{{ address.codePostal }}</td>
            </tr>
            <tr>
                <th>Pays</th>
                <td>{{ address.pays }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_compte') }}">Retour page compte</a>

    <a href="{{ path('address_edit', {'id': address.id}) }}">Modifier</a>

    {{ include('address/_delete_form.html.twig') }}
{% endblock %}
